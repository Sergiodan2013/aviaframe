# Aviaframe Backend Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Application
APP_NAME=Aviaframe Backend
APP_VERSION=0.1.0

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Database (PostgreSQL - to be configured)
# DATABASE_URL=postgresql://user:password@localhost:5432/aviaframe_dev
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# DRCT API Configuration (External Provider)
# IMPORTANT: Keep these secret! Never commit real tokens to git
DRCT_API_BASE_URL=https://api.sandbox.drct.example/v1
DRCT_BEARER_TOKEN=your_sandbox_token_here
DRCT_RATE_LIMIT_RPS=1
DRCT_TIMEOUT_MS=30000

# Security
# JWT_SECRET=generate-a-secure-random-string-min-32-chars
# JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Session (if using session-based auth)
# SESSION_SECRET=generate-a-secure-random-string
# SESSION_MAX_AGE=86400000

# Rate Limiting (Per-tenant)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Idempotency
IDEMPOTENCY_TTL_DAYS=7

# PII Masking
PII_MASKING_ENABLED=true

# Monitoring & Observability
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Feature Flags
FEATURE_CACHING_ENABLED=false
FEATURE_WEBHOOKS_ENABLED=false

# Development helpers
DEV_SEED_DATA=false
DEV_MOCK_DRCT=false
